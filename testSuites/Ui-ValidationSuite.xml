<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="BrowserStackTestSuite" parallel="tests" thread-count="3">
    <test name="Chrome-1920x1080">
        <parameter name="browser" value="chrome"/>
        <parameter name="os" value="Windows"/>
        <parameter name="resolution" value="1920x1080"/>
        <classes>
			 <class name="com.example.TwistedMountainAnimation.Tests.HomePageTitleTest"/>
            <class name="com.example.TwistedMountainAnimation.Tests.ProductSearchTest"/>
            <class name="com.example.TwistedMountainAnimation.Tests.FooterLinkStatusTest"/>
        </classes>
    </test>

    <test name="Firefox-1920x1080">
        <parameter name="browser" value="firefox"/>
        <parameter name="os" value="Windows"/>
        <parameter name="resolution" value="1366x768"/>
        <classes>
			<class name="com.example.TwistedMountainAnimation.Tests.HomePageTitleTest"/>
            <class name="com.example.TwistedMountainAnimation.Tests.ProductSearchTest"/>
            <class name="com.example.TwistedMountainAnimation.Tests.FooterLinkStatusTest"/>
        </classes>
    </test>


</suite>

	